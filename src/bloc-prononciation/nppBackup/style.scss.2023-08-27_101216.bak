.wp-block-create-block-bloc-prononciation {
	background-color: #21759b;
	color: #fff;
	padding: 2px;
}
.bk-prononciation {
	padding: 0 !important;
}

.bk-prononciation h4 {
	padding-left: 1% !important;
	font-size: 1.2em;
	color: var(--co-titre-bloc);
}

.bk-prononciation .elements-prononciations {
	margin: 0 !important;
	margin-bottom: 2% !important;
}

.bk-prononciation .elements-prononciations  > [class*="__inner-container"] > * {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: center;
	max-width: 100% !important;
	align-items: center;
	gap: 1%;
}
.bk-parametrage {
	background-color: green;
}