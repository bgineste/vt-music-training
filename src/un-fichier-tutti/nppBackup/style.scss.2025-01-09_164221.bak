#vt--une-page {
	.vt--un-fichier-tutti {
		font-size: 2em;
		background-color: var(--vt--bg-symbole-pupitre);
		color: var(--vt--co-symbole-pupitre);
		margin-top: 0.5%;
		margin-bottom: 0.5%;
		padding: 0.5%;
		
	}
	.vt--un-fichier-tutti > * {
		display: flex;
		padding: 0.5%;
		
		flex-direction: row;
		justify-content: flex-start;
		align-items: center;
		gap: 10px;
	}
	.vt--un-fichier-tutti {
		.vt--label {
			text-align: center;
		}
	}
}