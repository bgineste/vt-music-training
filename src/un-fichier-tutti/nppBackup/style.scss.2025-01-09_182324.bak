#vt--une-page {
	.vt--un-fichier-tutti {
		font-size: 1.2em;
		background-color: var(--vt--bg-symbole-pupitre);
		color: var(--vt--co-symbole-pupitre);
		margin-top: 0.5%;
		margin-bottom: 0.5%;
		padding: 0.5%;
		border-radius: 8px;
	}
	@media (min-width: 700px) {
		.vt--un-fichier-tutti{
			font-size: 1.5em;
		}
	}

	.vt--un-fichier-tutti {
		> * {
		display: flex;
		padding: 0.5%;
		
		flex-direction: row;
		justify-content: flex-end;
		align-items: center;
		gap: 10px;
		}
		.vt--label {
			text-align: center;
		}
		.fa-solid {
			font-size: 1.8em;
			color: white;
			background-color: var(--vt--bg-symbole-pupitre);
		}
		@media (min-width: 700px) {
			.fa-solid {
				font-size: 2.5em;
			}
		}
	}
}