/**
 * S'applique au bloc bloc-fichiers-de-travail sur le site et dans l'éditeur
 */

#vt--une-page {
	/* pour l'éditeur */
	.vt--editor-groupe-pupitre {
		border: thick double black;
		background-color: teal;
		padding: 1%;
	}
	.vt--editor-un-pupitre {
		border: thick single black;
		background-color: olive;
		padding: 1%;
	}
}


