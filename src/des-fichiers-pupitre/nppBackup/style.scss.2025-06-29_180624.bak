/**
 * S'applique au bloc des-fichiers-pupitre
 */

.vt--une-section {
	
	.vt--fichiers-pupitre {
		display: flex;
		  flex-direction: column;
		  flex-wrap: wrap;
		  align-items: center;
		  justify-content: center;
		  padding: 0;
		  gap: 10px;
		  width: max-content !important;
		  max-width: 95vw;
		  background-color: var(--bg-masque-clair);
		  border-radius: 8px;
		  padding: 3px;
		  margin-top: 7px;
		  gap: 7px 10px;
		  white-space: nowrap;
	}
	.vt--group-fichiers-pupitre {
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		white-space: nowrap; /* devrait être hérité */
	}
	.vt--group-fichiers-pupitre-titre {
		line-height: 2.4rem;
	}
	.vt--pupitre-container {
		display: flex;
		flex-direction: row;
		width: max-content !important;
		max-width: 95vw;
		background-color: var(--bg-masque-clair);
		border-radius: 8px;
		padding: 5px;
		/*margin-top: 7px;*/
		gap: 20px 10px;
		white-space: nowrap; /* devrait être hérité */		
	}
	.vt--pupitre-label {
		display: table;
		background-color: var(--bg-symbole-pupitre);
		border-radius: 50%;
		height: 2em;
		width: 2em;
		font-size: 2em;
		line-height: 2em;
		text-align: center;
		padding: 0 0;
		cursor: pointer;
		background-color: var(--vt--bg-symbole-pupitre);
		color: var(--vt--co-symbole-pupitre);		
	}
	.vt--pupitre-label::before {
		font-family: "Font Awesome 5 Free";
		font-weight: 900;
		content: "\f152";
		padding-right: 1%;
		
	}
}

/**
* Styles pour l'éditeur
*/

.vt--editor-bloc-pupitres {
	.editor-styles-wrapper fieldset {
		padding: 10px !important;
	} 
}

.vt--editor-params-defaut-pupitres {
	background-color: yellow;
	margin-bottom: 10px;
	padding: 8px !important;;
	h2 {
		font-size: 18px !important;
		font-weight: 600 !important;
	}
}

.vt--editor-groupe-pupitres {
	background-color: orange;
	margin-bottom: 10px;
	padding: 8px !important;
}

.vt--editor-un-pupitre {
	background-color: green;
	margin-bottom: 10px;
	padding: 8px !important;
}