.bk-block-bouton-index {
	margin-left: 0 !important;
	padding: 2%;
	background-color: var(--vt--bg-symbole-pupitre);
	color: var(--vt--co-symbole-pupitre);
	width: max-content !important;
	max-width: 100% !important;
	border-radius: 10px;
	border: 3px ridge var(--vt--bg-symbole-pupitre);
	
}
.bk-block-bouton-index:hover {
	cursor: pointer;
}
.bk-block-bouton-index h5 {
	padding: 0;
	margin: 0;
}

