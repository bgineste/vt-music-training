.vt--block-bouton-index {
	margin-left: 0 !important;
	padding: 2%;
	background-color: var(--vt--bg-symbole-pupitre);
	color: var(--vt--co-symbole-pupitre);
	width: max-content !important;
	max-width: 100% !important;
	border-radius: 10px;
	border: 3px ridge var(--vt--bg-symbole-pupitre);
	
}
.vt--block-bouton-index:hover {
	cursor: pointer;
}
.vt--block-bouton-index h5 {
	padding: 0;
	margin: 0 !important;
}
/*------------------------------------------------------------------------------------------------------------------------------------------*/

.vt--popup__support {
	display: none;
	background-color: var(--bg-masque-clair);
	margin: 0 !important;
	width: 100vw;
	max-width: 100vw;
	position: fixed;
	top: var(--header-height);
	left: 0;
	height: calc(100vh - var(--header-height));
	align-items: center;
	z-index: 99;

}


.vt--wrap-index-choeurs  {
	background-color: #fff; /*var(--bg-un-morceau);*/
	opacity: 0;
	border-radius: 10px;
	display: flex;
	margin: 0 1%;
	flex-direction: row;
	flex-wrap: wrap;
	width: 99%;
	max-width: calc(var(--largeur-utile) * 0.99) !important;  
	justify-content: center;
	gap: 25px 10px;
	padding-top: 25px;
	padding-bottom: 25px;

	/*max-height: 100vh;*/
}

@media only screen and (max-height: 600px) {
	.vt--popup__support {
	}
	.vt--wrap-index-choeurs {
		/*
		align-items: flex-start;
		overflow-y: scroll;
		overflow-x: hidden;
		*/
	}

}



