.vt--block-bouton-index {
	margin-left: 0 !important;
	padding: 2%;
	background-color: var(--vt--bg-symbole-pupitre);
	color: var(--vt--co-symbole-pupitre);
	width: max-content !important;
	max-width: 100% !important;
	border-radius: 10px;
	border: 3px ridge var(--vt--bg-symbole-pupitre);
	
}
.vt--block-bouton-index:hover {
	cursor: pointer;
}
.vt--block-bouton-index h5 {
	padding: 0;
	margin: 0;
}

.vt--index-choeurs {
	background-color: var(--bg-masque-clair); /* var(--bg-masque-fonce) */
	margin: 0 !important;

	position: fixed;
	top: var(--header-height);
	left: 0;
	height: calc(100vh - var(--header-height));
	z-index: 99;

}

.vt--index-choeurs  > [class*="__inner-container"] {
	display: flex;
	height: calc(100vh - var(--header-height));
	align-items: center;
}

.vt--index-choeurs .vt--wrap-index-choeurs > [class*="__inner-container"] {
	background-color: var(--bg-un-morceau); /*var(--bg-section-a);*/
	border-radius: 10px;
	display: flex;
	margin: 0 1%;
	flex-direction: row;
	flex-wrap: wrap;
	max-width: 100%;
	justify-content: center;
	/*max-height: 100vh;*/
}

@media only screen and (max-height: 600px) {
	.vt--index-choeurs {
	}
	.vt--index-choeurs  > [class*="__inner-container"] {
		align-items: flex-start;
		overflow-y: scroll;
		overflow-x: hidden;
	}
	.vt--index-choeurs .vt--wrap-index-choeurs > [class*="__inner-container"] {
	}

}


div.vt--lien-vers-ancre {
	/*width: auto !important;*/
	width: fit-content !important;
	padding: 0.5% !important;
	margin: 0.5% !important;
	background-color: var(--bg-symbole-pupitre); /*#005177;*/
	color: var(--co-symbole-pupitre); /*white*/
	border-radius:10px;
	text-decoration: none !important;
}

div.vt--lien-vers-ancre:hover {
	color: #B0C4DE;
}

