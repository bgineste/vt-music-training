	.block-enregistrement-gr--column {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	/*	width: fit-content; */
		white-space: nowrap;
	}
	/*
	.block-enregistrement-gr--video {
		margin: 0;
		padding: 0;
		border: 2px solid  var(--bg-masque-clair);
	}

	.block-enregistrement-gr--video figcaption {
		margin-top: 0;
		margin-bottom: 0;
		padding: 5px;
		text-align: center;
	}
	*/
	.block-enregistrement-gr--row {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		white-space: normal;
	}

	.block-enregistrement-gr--audio, .block-enregistrement-gr--video {
		margin-top: 0 !important;
		margin-bottom: 1.5% !important;
		padding: 0.5%;	
	}

	.block-enregistrement-gr--clients {
	/*	display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;*/
		width: max-content !important;
		max-width: 95vw;
		background-color: var(--bg-masque-clair);
		border-radius: 8px;
		padding: 5px;
		/*margin-top: 7px;*/
		gap: 20px 10px;
		white-space: nowrap;
	}
	.block-enregistrement-gr--clients.enligne {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		
	}
	.block-enregistrement-gr--clients.encolonne {
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		padding: 0;
		
	}
	.block-enregistrement-gr--clients.encolonneetenligne {
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		padding: 0;
		gap: 10px;
		
	}
	.block-enregistrement-gr--clients.encolonneetenligne > *{
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		justify-content: center;
		
	}

	.block-enregistrement-gr--clients-symbole-pupitre .cercle {
		display: table;
		background-color: var(--bg-symbole-pupitre);
		border-radius:50%;
		height: 2em;
		width: 2em;
		font-size: 2em;
		line-height: 2em;
		text-align: center;
		padding: 0 0;
		/*margin: 0 4px;
		color: var(--co-symbole-pupitre);
	*/
	}
	.block-enregistrement-gr--clients-symbole-pupitre .rectangle {
		display: table;
		background-color: var(--bg-symbole-pupitre);
		/*height: 2em;*/
		width: fit-content;
		font-size: 2em;
		line-height: 1em;
		white-space: normal;
		text-align: center;
		border-radius: 8px;
		padding: 15px;
	}

	.block-enregistrement-gr--clients-symbole-pupitre-style {
		display: table-cell;
		vertical-align: middle;
		color: var(--co-symbole-pupitre) !important;
		text-decoration: none;
		cursor: pointer;
	}
	.block-enregistrement-gr--clients-symbole-pupitre-style:before {
		font-family: "Font Awesome 5 Free"; 
	/*	text-rendering: optimizeLegibility;*/
		font-weight: 900; 
		content: "\f152";
		padding-right: 1%;
	}
		

	.block-enregistrement-gr--clients-symbole-pupitre-style.cercle.pupitre-choisi {
		background-color: var(--bg-un-morceau);
		color: var(--co-un-morceau);
	}
	.block-enregistrement-gr--clients-symbole-pupitre-style.rectangle.pupitre-choisi {
		background-color: var(--bg-masque-clair);
		color: #000 !important;
	}

	.block-enregistrement-gr--clients-saisie-nom-boucle {
		display: flex;
		width: fit-content !important;
		background-color: inherit !important;
	}
	.block-enregistrement-gr--clients-choix-boucle {
		display: block;
		width: fit-content !important;
		background-color: var(--bg-masque-clair) !important;
		border-radius: 0 !important;
	}

	.parent {
		position: relative;
	/*    width: 300px;
		height: 300px;
		margin: 10px;*/
	}
	.child1 {
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		opacity: 0.7;
	}
	.child2 {
		z-index: 1;
	/*    margin: 30px;
		background: green;*/
	}
}

	


