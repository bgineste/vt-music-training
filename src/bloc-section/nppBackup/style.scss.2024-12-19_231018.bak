/**
 * S'applique au bloc bloc-main  sur le site et dans l'éditeur
 */

/* la classe vt--une-page est définie dans la déclaration du Shadow DOM */


.vt--une-page h2 {
	font-size: 2.6em !important;
}
@media (min-width: 700px) {
	.vt-une-page h2 {
		font-size: 4.8em !important;
	} 
}

.vt--une-page h4 {
	font-size: 4em;
}




